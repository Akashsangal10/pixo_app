<div class="card space21" style="background-color: #f0f2f1;">
	<p class=" space21 space22">Looking To Hire</p>
	<h6 class="space22">Our Developers</h6>
	<%= form_with(model: @ondemand,  url: ondemandform_path)do |form| %>
			<div>
				<div class="row">
					<div class="col-lg-6">
						<div class="row">
							<div class="col-lg-6 space21  ">
								<div class="col-lg-3 flex22">
									<%= form.text_field :firstname, autofocus: true, placeholder: "Full Name" %>
									<%= form.email_field :email, autofocus: true, placeholder: "Email", class:"space7" %>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="col-lg-6 space21 flex22">
									<%= form.text_field :country, autofocus: true, placeholder: "Country" %>
									<%= form.text_field :skype, autofocus: true, placeholder: "Skype", class:"space7" %>
							</div>
							<div class="row">
								<div class="col-lg-6 space21 flex22">
									<%= form.text_field :technologies, autofocus: true, placeholder: "technologies" %>
									<%= form.text_field :resources_required, autofocus: true, placeholder: "Resources Required", class:"space7" %>
								</div>
							</div>
							<div class="row">
								<div class="col-lg-6 space21 flex22">
									<%= form.text_field :message, autofocus: true, placeholder: "Message" %>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="col-lg4 space21 flex22">
								<%= form.submit "Submit",class: ''%>
							</div>
						</div>
					</div>
					<div class="col-lg-6">
						<img alt="Assets" src="/assets/Rectangle 41.png", width="560" height="280" class="absolute1">
					</div>
				</div>
			</div>
	<% end %>
</div>